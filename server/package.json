{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./server.js",
    "debug": "nodemon --inspect ./index.js"
  },
  "license": "MIT",
  "dependencies": {
    "bson": "^4.5.1",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "mongodb": "^4.1.0",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "eslint": "7.25.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "nodemon": "^2.0.13",
    "prettier": "2.3.1"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "ignorePatterns": [
      "**/scripts"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "class-methods-use-this": [
        "error",
        {
          "exceptMethods": [
            "schema"
          ]
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
